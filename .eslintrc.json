{
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "no-unused-vars": [2, {"args": "none"}],
    "quotes": [2, "single"],
    "semi": [2, "never"]
  },
  "globals": {
    "expect": true,
    "bard": true,
    "$rootScope": true,
    "$controller": true,
    "$compile": true,
    "$timeout": true,
    "$httpBackend": true,
    "$state": true,
    "sinon": true,
    "$q": true,
    "$": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ]
}
