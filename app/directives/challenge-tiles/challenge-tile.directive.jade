.challenge-name
  a(ng-href="https://www.{{DOMAIN}}/challenge-details/{{challenge.challengeId}}/?type={{challenge.track}}") {{challenge.challengeName}}

.challenge-details
  .challenge-icons
    img(ng-show="challenge.track === 'DEVELOP'", asset-src="images/member-program/svg/development-generic.svg")
    img(ng-show="challenge.track === 'DESIGN' || challenge.track === 'Data Science'", asset-src="images/member-program/svg/design-generic.svg")

    a(ng-href="http://apps.topcoder.com/forums//?module=Category&categoryID={{challenge.forumId}}")
      i.fa.fa-comment

  p.roles Roles: {{challenge.userDetails.roles | listRoles}}

  .challenge-status
    p.days-remaining {{challenge.registrationEndDate | timeDiff}}
      span Registration Ends

    .stats
      .registrants(ng-show="challenge.numRegistrants > 0")
        i.fa.fa-user
        a(ng-href="https://www.{{DOMAIN}}/challenge-details/{{challenge.challengeId}}/?type={{challenge.track}}#viewRegistrant") {{challenge.numRegistrants}}
      .submissions(ng-show="challenge.numSubmissions > 0")
        i.fa.fa-files-o
        a(ng-href="https://www.{{DOMAIN}}/challenge-details/{{challenge.challengeId}}/?type={{challenge.track}}#viewRegistrant") {{challenge.numSubmissions}}

    .phase-status
      i.fa.fa-check-circle-o

      p {{challenge.memberStatusMsg}}
