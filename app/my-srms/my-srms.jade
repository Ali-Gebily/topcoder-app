.my-srms-container
  header
    h1.section-title My SRMs

    p.viewDashboard
        a(ui-sref="dashboard") View Dashboard

    p.viewOptions
      a(ng-click="vm.changeView('list')", ng-class="{disabled: vm.view == 'list'}") List
      span &nbsp; | &nbsp;
      a(ng-click="vm.changeView('tile')", ng-class="{disabled: vm.view == 'tile'}") Tile

    p.filters
      a(ng-click="vm.viewUpcomingSRMs()", ng-class="{disabled: vm.listType == 'future'}") Upcoming
      span &nbsp; | &nbsp;
      a(ng-click="vm.viewPastSRMs()", ng-class="{disabled: vm.listType == 'past'}") Past

  .section-loading(ng-show="vm.loading")

  section.srms(ng-hide="vm.loading")
    srm-tile.srm-tile(ng-repeat="srm in vm.srms", srm="srm", view="vm.view", ng-class="vm.view + '-view'", show-results="vm.listType == 'past'")

  .section-links
    .link
      a(href="https://community.{{DOMAIN}}/tc?module=ProblemArchive") Problem Archives

    .link
      a(href="https://apps.{{DOMAIN}}/wiki/display/tc/Algorithm+Problem+Set+Analysis") Match Editorials

    .link
      a(href="https://arena.{{DOMAIN}}/") Launch Topcoder Arena
